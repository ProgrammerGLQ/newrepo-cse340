<%- messages() %>

<div class="delete-inventory">
    <h1><%= title %></h1>

    <%# Messages %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

    <p class="notice">Confirm Deletion - The delete is permanent.</p>

    <div class="form-container">
        <form action="/inv/delete" method="post">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" 
                value="<%= locals.inv_make %>" readonly>

            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" 
                value="<%= locals.inv_model %>" readonly>

            <label for="inv_year">Year:</label>
            <input type="text" id="inv_year" name="inv_year" 
                value="<%= locals.inv_year %>" readonly>

            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" 
                value="<%= locals.inv_price %>" readonly>

            <button type="submit">Delete Vehicle</button>

            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
        </form>
    </div>
</div>